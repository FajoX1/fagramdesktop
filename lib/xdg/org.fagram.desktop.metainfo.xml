<?xml version="1.0" encoding="utf-8"?>
<component type="desktop">
    <id>org.fagram.desktop</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0</project_license>
    <name>FAgram Desktop</name>
    <summary>Fast. Secure. Powerful.</summary>
    <description>
        <p>Telegram client based on Telegram Desktop</p>
    </description>
    <categories>
        <category>Network</category>
        <category>InstantMessaging</category>
    </categories>
    <developer id="org.fateam"><name>FAteam</name></developer>
    <url type="homepage">https://t.me/FAgramClient/</url>
    <url type="bugtracker">https://github.com/fajox1/fagramdesktop/issues</url>
    <url type="translate">https://translations.telegram.org/</url>
    <url type="contribute">https://github.com/fajox1/fagramdesktop/blob/dev/.github/CONTRIBUTING.md</url>
    <branding>
        <color type="primary" scheme_preference="light">#edf0f2</color>
        <color type="primary" scheme_preference="dark">#2d363f</color>
    </branding>
    <screenshots>
      <screenshot type="default">
        <image>https://raw.githubusercontent.com/fajox1/fagram/dev/docs/assets/preview.png</image>
      </screenshot>
      <screenshot>
        <image>https://raw.githubusercontent.com/telegramdesktop/tdesktop/dev/docs/assets/slide.01.jpg</image>
        <caption>A lightning-fast native app that seamlessly syncs with your other devices</caption>
      </screenshot>
      <screenshot>
        <image>https://raw.githubusercontent.com/telegramdesktop/tdesktop/dev/docs/assets/slide.02.jpg</image>
        <caption>A fully autonomous Telegram app, no phone connection required</caption>
      </screenshot>
      <screenshot>
        <image>https://raw.githubusercontent.com/telegramdesktop/tdesktop/dev/docs/assets/slide.03.jpg</image>
        <caption>A quick way to view photos, videos and files</caption>
      </screenshot>
      <screenshot>
        <image>https://raw.githubusercontent.com/telegramdesktop/tdesktop/dev/docs/assets/slide.04.jpg</image>
        <caption>Send and store unlimited media and files of any type</caption>
      </screenshot>
    </screenshots>
    <keywords>
        <keyword>tg</keyword>
        <keyword>telegram</keyword>
        <keyword>tdesktop</keyword>
        <keyword>messaging</keyword>
        <keyword>messenger</keyword>
        <keyword>chat</keyword>
        <keyword>sms</keyword>
        <keyword>im</keyword>
    </keywords>
    <requires>
        <!-- windowMinHeight from Telegram/SourceFiles/window/window.style -->
        <display_length compare="ge">480</display_length>
        <internet>always</internet>
        <!-- on-screen keyboards are too big for current minimal display height -->
        <control>keyboard</control>
    </requires>
    <supports>
        <control>pointing</control>
        <control>touch</control>
    </supports>
    <content_rating type="oars-1.1">
        <content_attribute id="violence-cartoon">none</content_attribute>
        <content_attribute id="violence-fantasy">none</content_attribute>
